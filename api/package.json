{
  "name": "buddyduel-api",
  "version": "1.0.0",
  "description": "Weekly Buddy Bets Backend",
  "repository": "git@github.com:lentz/buddyduel.git",
  "author": "Jesse Lentz <jesselentz@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "test": "DATABASE_NAME=test node --env-file .env ./node_modules/.bin/vitest run",
    "test:watch": "DATABASE_NAME=test node --env-file .env ./node_modules/.bin/vitest",
    "test:ci": "vitest",
    "typecheck": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.4",
    "body-parser": "^1.20.2",
    "connect-mongodb-session": "^5.0.0",
    "cron": "^4.1.0",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.18.1",
    "jwt-decode": "^4.0.0",
    "mongoose": "^8.11.0",
    "morgan": "^1.10.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/body-parser": "^1.19.5",
    "@types/connect-mongodb-session": "2.4.7",
    "@types/eslint__js": "^9.14.0",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.11",
    "@types/shortid": "2.2.0",
    "@types/supertest": "^6.0.2",
    "@vitest/eslint-plugin": "^1.1.36",
    "eslint": "^9.21.0",
    "lint-staged": "^15.4.3",
    "prettier": "3.5.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0",
    "vitest": "^3.0.7"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "**/*.ts": "eslint --cache --fix",
    "*.{js,json,md,ts,yml}": "prettier --write"
  }
}
