{
  "name": "buddyduel-api",
  "version": "1.0.0",
  "description": "Weekly Buddy Bets Backend",
  "repository": "git@github.com:lentz/buddyduel.git",
  "author": "Jesse Lentz <jesselentz@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "test": "DATABASE_NAME=test node --env-file .env ./node_modules/.bin/vitest run",
    "test:watch": "DATABASE_NAME=test node --env-file .env ./node_modules/.bin/vitest",
    "test:ci": "vitest",
    "typecheck": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "body-parser": "^1.20.2",
    "connect-mongodb-session": "^5.0.0",
    "cron": "^3.1.7",
    "date-fns": "^4.1.0",
    "express": "^4.21.0",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.18.0",
    "jwt-decode": "^4.0.0",
    "mongoose": "^8.7.0",
    "morgan": "^1.10.0",
    "shortid": "^2.2.16",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/body-parser": "^1.19.5",
    "@types/connect-mongodb-session": "2.4.7",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.11",
    "@types/shortid": "0.0.32",
    "@types/supertest": "^6.0.2",
    "@vitest/eslint-plugin": "^1.1.5",
    "eslint": "^9.11.1",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0",
    "vitest": "^2.1.1"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "**/*.ts": "eslint --cache --fix",
    "*.{js,json,md,ts,yml}": "prettier --write"
  }
}
