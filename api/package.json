{
  "name": "buddyduel-api",
  "version": "1.0.0",
  "description": "Weekly Buddy Bets Backend",
  "repository": "git@github.com:lentz/buddyduel.git",
  "author": "Jesse Lentz <jesselentz@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint '**/*.ts'",
    "lint-staged": "lint-staged",
    "test": "DATABASE_NAME=test node --env-file .env ./node_modules/.bin/vitest run",
    "test:watch": "DATABASE_NAME=test node --env-file .env ./node_modules/.bin/vitest",
    "test:ci": "vitest",
    "typecheck": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "body-parser": "^1.20.2",
    "bree": "^9.2.3",
    "connect-mongodb-session": "^5.0.0",
    "date-fns": "^3.6.0",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.18.0",
    "js-cookie": "^3.0.5",
    "jwt-decode": "^4.0.0",
    "lodash-es": "^4.17.21",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0",
    "shortid": "^2.2.16",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/connect-mongodb-session": "2.4.7",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash-es": "^4.17.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.4",
    "@types/shortid": "0.0.32",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vitest": "^0.5.4",
    "lint-staged": "^15.2.7",
    "prettier": "3.3.2",
    "supertest": "^7.0.0",
    "tsx": "^4.16.0",
    "typescript": "^5.1.6",
    "vitest": "^2.0.3"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "**/*.ts": "eslint --cache --fix",
    "*.{js,json,md,ts,yml}": "prettier --write"
  }
}
