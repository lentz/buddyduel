{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "allowJs": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "**/*.test.*"]
}
