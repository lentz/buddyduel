{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "allowJs": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "incremental": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "**/*.test.*"
  ]
}
