{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "strict": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["../node_modules", "**/*.test.*"]
}
