{
  "name": "buddyduel",
  "version": "1.0.0",
  "description": "Weekly Buddy Bets",
  "repository": "git@github.com:lentz/buddyduel.git",
  "author": "Jesse Lentz <jesselentz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build-api": "cd ./api && tsc",
    "build-api-watch": "cd ./api && tsc --watch",
    "build-client": "cd ./client && ng build",
    "build-client-prod": "cd ./client && ng build --prod",
    "build-client-watch": "cd ./client && ng build --watch",
    "start": "node api/dist/server.js",
    "lint": "eslint 'api/**/*.ts'",
    "lint-staged": "lint-staged",
    "postlint": "cd ./client && ng lint buddyduel --type-check",
    "test": "jest --coverage",
    "test-unit": "jest --coverage --testPathIgnorePatterns 'integration'",
    "test-watch": "jest --watch",
    "heroku-postbuild": "npm run build-api && npm run build-client-prod"
  },
  "engines": {
    "node": "^10.0.0",
    "npm": "^6.0.0"
  },
  "dependencies": {
    "@angular/animations": "7.2.15",
    "@angular/cli": "7.3.9",
    "@angular/common": "7.2.15",
    "@angular/compiler": "7.2.15",
    "@angular/compiler-cli": "7.2.15",
    "@angular/core": "7.2.15",
    "@angular/forms": "7.2.15",
    "@angular/http": "7.2.15",
    "@angular/platform-browser": "7.2.15",
    "@angular/platform-browser-dynamic": "7.2.15",
    "@angular/platform-server": "7.2.15",
    "@angular/router": "7.2.15",
    "@sendgrid/mail": "^6.5.5",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "capital-case": "^1.0.3",
    "connect-mongodb-session": "^2.3.1",
    "core-js": "^3.6.4",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.0",
    "js-cookie": "^2.2.1",
    "jsonpath": "^1.0.2",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mongoose": "^5.9.6",
    "morgan": "^1.10.0",
    "ngx-toastr": "^10.2.0",
    "pug": "^2.0.4",
    "rxjs": "^6.5.5",
    "shortid": "^2.2.15",
    "typescript": "3.2.4",
    "winston": "^3.2.1",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@types/connect-mongodb-session": "0.0.2",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.3",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^25.1.4",
    "@types/js-cookie": "^2.2.5",
    "@types/jsonpath": "^0.2.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.7.8",
    "@types/morgan": "^1.9.0",
    "@types/node": "^10.17.17",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "codelyzer": "^5.2.2",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.2.3",
    "lint-staged": "^10.0.9",
    "nock": "^12.0.3",
    "pre-commit": "^1.2.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "tslint": "^5.20.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/api/**/*.test.ts"
    ]
  },
  "nodemonConfig": {
    "exec": "node --inspect -r ts-node/register ./api/src/server.ts",
    "ext": "ts",
    "ignore": [
      "*.test.*",
      "client/"
    ],
    "nodeArgs": "--inspect"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "src/**/*": "tslint -p src/tsconfig.app.json",
    "api/**/*.ts": "eslint"
  }
}
