{
  "name": "buddyduel",
  "version": "1.0.0",
  "description": "Weekly Buddy Bets",
  "repository": "git@github.com:lentz/buddyduel.git",
  "author": "Jesse Lentz <jesselentz@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build-api": "cd ./api && tsc",
    "build-client": "cd ./client && ng build --configuration development",
    "build-client-prod": "cd ./client && ng build",
    "build-client-watch": "cd ./client && ng build --configuration development --watch",
    "cy:run": "cypress run",
    "cy:open": "cypress open --e2e --browser chrome",
    "lint": "eslint 'api/**/*.ts'",
    "lint-staged": "lint-staged",
    "postlint": "cd ./client && ng lint",
    "serve": "tsx watch --inspect ./api/src/server.ts",
    "start": "node api/dist/server.js",
    "test": "DATABASE_NAME=test vitest run",
    "test-watch": "DATABASE_NAME=test vitest",
    "typecheck": "tsc --watch --noEmit -p ./api/tsconfig.json"
  },
  "dependencies": {
    "@angular/animations": "16.2.7",
    "@angular/cli": "16.2.4",
    "@angular/common": "16.2.7",
    "@angular/compiler": "16.2.7",
    "@angular/compiler-cli": "16.2.7",
    "@angular/core": "16.2.7",
    "@angular/forms": "16.2.7",
    "@angular/platform-browser": "16.2.7",
    "@angular/platform-browser-dynamic": "16.2.7",
    "@angular/platform-server": "16.2.7",
    "@angular/router": "16.2.7",
    "@sendgrid/mail": "^8.1.0",
    "body-parser": "^1.20.2",
    "bree": "^9.1.3",
    "connect-mongodb-session": "^5.0.0",
    "core-js": "^3.32.1",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.18.0",
    "js-cookie": "^3.0.5",
    "jwt-decode": "^4.0.0",
    "lodash-es": "^4.17.21",
    "mongoose": "^8.1.1",
    "morgan": "^1.10.0",
    "ngx-toastr": "^17.0.2",
    "rxjs": "^7.8.1",
    "shortid": "^2.2.16",
    "tslib": "^2.6.2",
    "winston": "^3.10.0",
    "zone.js": "^0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.4",
    "@angular-eslint/builder": "^16.2.0",
    "@angular-eslint/eslint-plugin": "16.2.0",
    "@angular-eslint/eslint-plugin-template": "16.2.0",
    "@angular-eslint/schematics": "16.2.0",
    "@angular-eslint/template-parser": "16.2.0",
    "@types/body-parser": "^1.19.5",
    "@types/connect-mongodb-session": "2.4.7",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash-es": "^4.17.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.4",
    "@types/shortid": "0.0.32",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.20.0",
    "cypress": "^13.6.4",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-vitest": "^0.3.21",
    "lint-staged": "^15.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "3.1.0",
    "supertest": "^6.3.3",
    "tsx": "^4.7.1",
    "typescript": "^5.1.6",
    "vitest": "^1.1.1"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "client/src/**/*.{ts,html}": "eslint --cache",
    "api/**/*.ts": "eslint --cache --fix",
    "*.{html,js,json,css,md,ts,yml}": "prettier --write"
  }
}
