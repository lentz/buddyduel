{
  "name": "buddyduel",
  "version": "1.0.0",
  "description": "Weekly Buddy Bets",
  "repository": "git@github.com:lentz/buddyduel.git",
  "author": "Jesse Lentz <jesselentz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build-api": "cd ./api && tsc",
    "build-api-watch": "cd ./api && tsc --watch",
    "build-client": "cd ./client && ng build",
    "build-client-prod": "cd ./client && ng build --prod",
    "build-client-watch": "cd ./client && ng build --watch",
    "e2e-test": "cypress run",
    "heroku-postbuild": "npm run build-api && npm run build-client-prod",
    "lint": "eslint 'api/**/*.ts'",
    "lint-staged": "lint-staged",
    "postlint": "cd ./client && ng lint",
    "serve": "ts-node-dev --inspect -- api/src/server.ts",
    "start": "node api/dist/server.js",
    "test": "jest --coverage --forceExit",
    "test-watch": "jest --watch"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "dependencies": {
    "@angular/animations": "13.2.2",
    "@angular/cli": "13.2.3",
    "@angular/common": "13.2.2",
    "@angular/compiler": "13.2.2",
    "@angular/compiler-cli": "13.2.2",
    "@angular/core": "13.2.2",
    "@angular/forms": "13.2.2",
    "@angular/platform-browser": "13.2.2",
    "@angular/platform-browser-dynamic": "13.2.2",
    "@angular/platform-server": "13.2.2",
    "@angular/router": "13.2.2",
    "@sendgrid/mail": "^7.6.2",
    "axios": "^0.27.2",
    "body-parser": "^1.19.2",
    "capital-case": "^1.0.4",
    "connect-mongodb-session": "^3.1.1",
    "core-js": "^3.21.1",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.2",
    "js-cookie": "^3.0.1",
    "jsonpath": "^1.1.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.2",
    "mongoose": "^6.2.9",
    "morgan": "^1.10.0",
    "ngx-toastr": "^14.2.2",
    "rxjs": "^6.6.7",
    "shortid": "^2.2.16",
    "tslib": "^2.0.0",
    "winston": "^3.7.2",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.3",
    "@angular-eslint/builder": "13.1.0",
    "@angular-eslint/eslint-plugin": "13.1.0",
    "@angular-eslint/eslint-plugin-template": "13.1.0",
    "@angular-eslint/schematics": "13.1.0",
    "@angular-eslint/template-parser": "13.1.0",
    "@types/body-parser": "^1.19.2",
    "@types/connect-mongodb-session": "2.4.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.4.1",
    "@types/js-cookie": "^3.0.1",
    "@types/jsonpath": "^0.2.0",
    "@types/lodash": "^4.14.181",
    "@types/morgan": "^1.9.3",
    "@types/node": "^14.14.43",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "5.17.0",
    "@typescript-eslint/parser": "5.17.0",
    "cypress": "^9.5.3",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "nock": "^13.2.4",
    "pre-commit": "^1.2.2",
    "prettier": "2.6.1",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/api/**/*.test.ts"
    ]
  },
  "nodemonConfig": {
    "env": {
      "TS_NODE_FILES": true
    },
    "exec": "node --inspect -r ts-node/register ./api/src/server.ts",
    "ext": "ts",
    "ignore": [
      "*.test.*",
      "client/"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "client/src/**/*.{ts,html}": "eslint --cache",
    "api/**/*.ts": "eslint --cache --fix",
    "*.{html,js,json,css,md,ts,yml}": "prettier --write"
  }
}
