{
  "name": "buddyduel",
  "version": "1.0.0",
  "description": "Weekly Buddy Bets",
  "repository": "git@github.com:lentz/buddyduel.git",
  "author": "Jesse Lentz <jesselentz@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build-api": "cd ./api && tsc",
    "build-client": "cd ./client && ng build --configuration development",
    "build-client-prod": "cd ./client && ng build",
    "build-client-watch": "cd ./client && ng build --configuration development --watch",
    "cy:run": "cypress run",
    "cy:open": "cypress open --e2e --browser chrome",
    "lint": "eslint 'api/**/*.ts'",
    "lint-staged": "lint-staged",
    "postlint": "cd ./client && ng lint",
    "serve": "tsx watch --inspect ./api/src/server.ts",
    "start": "node api/dist/server.js",
    "test": "DATABASE_NAME=test vitest run",
    "test-watch": "DATABASE_NAME=test vitest",
    "typecheck": "tsc --watch --noEmit -p ./api/tsconfig.json"
  },
  "dependencies": {
    "@angular/animations": "15.2.1",
    "@angular/cli": "15.2.1",
    "@angular/common": "15.2.1",
    "@angular/compiler": "15.2.1",
    "@angular/compiler-cli": "15.2.1",
    "@angular/core": "15.2.1",
    "@angular/forms": "15.2.1",
    "@angular/platform-browser": "15.2.1",
    "@angular/platform-browser-dynamic": "15.2.1",
    "@angular/platform-server": "15.2.1",
    "@angular/router": "15.2.1",
    "@sendgrid/mail": "^7.7.0",
    "axios": "^1.5.1",
    "body-parser": "^1.20.2",
    "bree": "^9.1.3",
    "connect-mongodb-session": "^3.1.1",
    "core-js": "^3.32.1",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.3",
    "js-cookie": "^3.0.5",
    "jwt-decode": "^3.1.2",
    "lodash-es": "^4.17.21",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "ngx-toastr": "^16.2.0",
    "rxjs": "^7.8.1",
    "shortid": "^2.2.16",
    "tslib": "^2.6.2",
    "winston": "^3.10.0",
    "zone.js": "^0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.1",
    "@angular-eslint/builder": "^15.2.1",
    "@angular-eslint/eslint-plugin": "15.2.1",
    "@angular-eslint/eslint-plugin-template": "15.2.1",
    "@angular-eslint/schematics": "15.2.1",
    "@angular-eslint/template-parser": "15.2.1",
    "@types/body-parser": "^1.19.2",
    "@types/connect-mongodb-session": "2.4.4",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/js-cookie": "^3.0.3",
    "@types/lodash-es": "^4.17.9",
    "@types/morgan": "^1.9.5",
    "@types/node": "^16.18.14",
    "@types/shortid": "0.0.29",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.5.0",
    "cypress": "^13.0.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-vitest": "^0.2.8",
    "lint-staged": "^14.0.1",
    "nock": "^13.3.1",
    "pre-commit": "^1.2.2",
    "prettier": "3.0.3",
    "supertest": "^6.3.3",
    "tsx": "^3.12.7",
    "typescript": "^4.9.5",
    "vitest": "^0.32.2"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "client/src/**/*.{ts,html}": "eslint --cache",
    "api/**/*.ts": "eslint --cache --fix",
    "*.{html,js,json,css,md,ts,yml}": "prettier --write"
  }
}
