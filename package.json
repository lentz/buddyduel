{
  "name": "buddyduel",
  "version": "1.0.0",
  "description": "Weekly Buddy Bets",
  "repository": "git@github.com:lentz/buddyduel.git",
  "author": "Jesse Lentz <jesselentz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build-api": "cd ./api && tsc",
    "build-api-watch": "cd ./api && tsc --watch",
    "build-client": "cd ./client && ng build",
    "build-client-prod": "cd ./client && ng build --prod",
    "build-client-watch": "cd ./client && ng build --watch",
    "e2e-test": "cypress run",
    "heroku-postbuild": "npm run build-api && npm run build-client-prod",
    "lint": "eslint 'api/**/*.ts'",
    "lint-staged": "lint-staged",
    "postlint": "cd ./client && ng lint buddyduel --type-check",
    "start": "node api/dist/server.js",
    "test": "jest --coverage --forceExit",
    "test-watch": "jest --watch"
  },
  "engines": {
    "node": "^10.0.0"
  },
  "dependencies": {
    "@angular/animations": "9.1.0",
    "@angular/cli": "9.1.0",
    "@angular/common": "9.1.0",
    "@angular/compiler": "9.1.0",
    "@angular/compiler-cli": "9.1.0",
    "@angular/core": "9.1.0",
    "@angular/forms": "9.1.0",
    "@angular/platform-browser": "9.1.0",
    "@angular/platform-browser-dynamic": "9.1.0",
    "@angular/platform-server": "9.1.0",
    "@angular/router": "9.1.0",
    "@sendgrid/mail": "^7.2.5",
    "axios": "^0.20.0",
    "body-parser": "^1.19.0",
    "capital-case": "^1.0.3",
    "connect-mongodb-session": "^2.4.1",
    "core-js": "^3.6.5",
    "cron": "^1.8.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.1",
    "js-cookie": "^2.2.1",
    "jsonpath": "^1.0.2",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.20",
    "moment": "^2.27.0",
    "mongoose": "^5.10.5",
    "morgan": "^1.10.0",
    "ngx-toastr": "^12.1.0",
    "rxjs": "^6.6.3",
    "shortid": "^2.2.15",
    "tslib": "^1.13.0",
    "typescript": "3.8.3",
    "winston": "^3.3.3",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.1",
    "@types/connect-mongodb-session": "0.0.3",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^26.0.13",
    "@types/js-cookie": "^2.2.6",
    "@types/jsonpath": "^0.2.0",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash": "^4.14.161",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.1",
    "@types/node": "^10.17.21",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "codelyzer": "^6.0.0",
    "cypress": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "jest": "^25.5.4",
    "lint-staged": "^10.3.0",
    "nock": "^13.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.1",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/api/**/*.test.ts"
    ]
  },
  "nodemonConfig": {
    "exec": "node --inspect -r ts-node/register ./api/src/server.ts",
    "ext": "ts",
    "ignore": [
      "*.test.*",
      "client/"
    ],
    "nodeArgs": "--inspect"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "src/**/*": "tslint -p src/tsconfig.app.json",
    "api/**/*.ts": "eslint --cache --fix",
    "*.{html,js,json,css,md,ts,yml}": "prettier --write"
  }
}
