{
  "name": "buddyduel",
  "version": "1.0.0",
  "description": "Weekly NFL Buddy Bets",
  "main": "server/server.js",
  "repository": "git@github.com:lentz/buddyduel.git",
  "author": "Jesse Lentz <jesselentz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "ng build",
    "build-prod": "ng build --prod",
    "build-watch": "ng build --watch",
    "ci": "jest --coverage --testPathIgnorePatterns 'integration'",
    "start": "node server/server.js",
    "lint": "eslint server/**/*.js",
    "lint-staged": "lint-staged",
    "postlint": "ng lint buddyduel --type-check",
    "test": "jest --coverage",
    "test-watch": "jest --watch",
    "heroku-postbuild": "npm run build-prod"
  },
  "engines": {
    "node": "^10.0.0",
    "npm": "^6.0.0"
  },
  "dependencies": {
    "@angular/animations": "7.2.15",
    "@angular/cli": "7.3.9",
    "@angular/common": "7.2.15",
    "@angular/compiler": "7.2.15",
    "@angular/compiler-cli": "7.2.15",
    "@angular/core": "7.2.15",
    "@angular/forms": "7.2.15",
    "@angular/http": "7.2.15",
    "@angular/platform-browser": "7.2.15",
    "@angular/platform-browser-dynamic": "7.2.15",
    "@angular/platform-server": "7.2.15",
    "@angular/router": "7.2.15",
    "@sendgrid/mail": "^6.4.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "connect-mongodb-session": "^2.2.0",
    "core-js": "^3.3.6",
    "cron": "^1.7.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.0",
    "js-cookie": "^2.2.1",
    "jsonpath": "^1.0.2",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mongoose": "^5.7.8",
    "morgan": "^1.9.1",
    "ngx-toastr": "^10.2.0",
    "pug": "^2.0.4",
    "rxjs": "^6.5.3",
    "shortid": "^2.2.15",
    "title-case": "^2.1.1",
    "typescript": "3.2.4",
    "winston": "^3.2.1",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@types/jasmine": "^3.4.5",
    "@types/js-cookie": "^2.2.4",
    "@types/node": "^10.17.3",
    "codelyzer": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "jasmine": "^3.5.0",
    "jasmine-core": "^3.5.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jest": "^24.9.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "lint-staged": "^9.4.2",
    "nock": "^11.7.0",
    "pre-commit": "^1.2.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "greenkeeper": {
    "ignore": [
      "typescript",
      "@types/node"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "public/",
      "src/"
    ],
    "nodeArgs": "--inspect"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "src/**/*.ts": "npm run postlint",
    "server/**/*.js": "eslint"
  }
}
