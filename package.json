{
  "name": "buddyduel",
  "version": "1.0.0",
  "description": "Weekly Buddy Bets",
  "repository": "git@github.com:lentz/buddyduel.git",
  "author": "Jesse Lentz <jesselentz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build-api": "cd ./api && tsc",
    "build-client": "cd ./client && ng build --configuration development",
    "build-client-prod": "cd ./client && ng build",
    "build-client-watch": "cd ./client && ng build --configuration development --watch",
    "cy:run": "cypress run",
    "cy:open": "cypress open --e2e --browser chrome",
    "heroku-postbuild": "npm run build-api && npm run build-client-prod",
    "lint": "eslint 'api/**/*.ts'",
    "lint-staged": "lint-staged",
    "postlint": "cd ./client && ng lint",
    "serve": "tsnd --inspect --rs --transpile-only --transpiler ts-node/transpilers/swc -- ./api/src/server.ts",
    "start": "node api/dist/server.js",
    "test": "jest --coverage --forceExit",
    "test-watch": "jest --watch",
    "typecheck": "tsc --watch --noEmit -p ./api/tsconfig.json"
  },
  "engines": {
    "node": "^16.0.0"
  },
  "dependencies": {
    "@angular/animations": "13.2.2",
    "@angular/cli": "13.2.3",
    "@angular/common": "13.2.2",
    "@angular/compiler": "13.2.2",
    "@angular/compiler-cli": "13.2.2",
    "@angular/core": "13.2.2",
    "@angular/forms": "13.2.2",
    "@angular/platform-browser": "13.2.2",
    "@angular/platform-browser-dynamic": "13.2.2",
    "@angular/platform-server": "13.2.2",
    "@angular/router": "13.2.2",
    "@sendgrid/mail": "^7.7.0",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "connect-mongodb-session": "^3.1.1",
    "core-js": "^3.23.3",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.3",
    "js-cookie": "^3.0.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "mongoose": "^6.4.2",
    "morgan": "^1.10.0",
    "ngx-toastr": "^14.3.0",
    "rxjs": "^6.6.7",
    "shortid": "^2.2.16",
    "tslib": "^2.4.0",
    "winston": "^3.8.1",
    "zone.js": "~0.11.7"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.2.3",
    "@angular-eslint/builder": "13.1.0",
    "@angular-eslint/eslint-plugin": "13.1.0",
    "@angular-eslint/eslint-plugin-template": "13.1.0",
    "@angular-eslint/schematics": "13.1.0",
    "@angular-eslint/template-parser": "13.1.0",
    "@babel/preset-typescript": "^7.18.6",
    "@swc/core": "^1.2.208",
    "@swc/jest": "^0.2.21",
    "@types/body-parser": "^1.19.2",
    "@types/connect-mongodb-session": "2.4.3",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^28.1.4",
    "@types/js-cookie": "^3.0.2",
    "@types/jsonpath": "^0.2.0",
    "@types/lodash": "^4.14.182",
    "@types/morgan": "^1.9.3",
    "@types/node": "^14.14.43",
    "@types/shortid": "0.0.29",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "5.30.4",
    "@typescript-eslint/parser": "5.30.4",
    "cypress": "^10.3.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.2",
    "lint-staged": "^13.0.3",
    "nock": "^13.2.8",
    "pre-commit": "^1.2.2",
    "prettier": "2.7.1",
    "supertest": "^6.2.4",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/api/**/*.test.ts"
    ],
    "transform": {
      "^.+\\.ts$": "@swc/jest"
    }
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "client/src/**/*.{ts,html}": "eslint --cache",
    "api/**/*.ts": "eslint --cache --fix",
    "*.{html,js,json,css,md,ts,yml}": "prettier --write"
  }
}
